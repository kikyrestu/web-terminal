# Copy to .env or set as environment variables in your process manager
NODE_ENV=production
PORT=3001

# Authentication
AUTH_USER=admin
# Use one of the following (prefer HASH in production)
# AUTH_PASS_HASH=$2a$10$YcKuGy0Nm.ZKkDYfA6/m/.6jJwwyN9lWI7UTz0kbXXniZ5iKpV5/m
# AUTH_PASS_PLAIN=PasswordRahasiaAnda

# Restrict WebSocket / API origin (set to your deployed domain)
ALLOWED_ORIGIN=https://your-domain.example

# History / buffer settings
TERMINAL_HISTORY_UNLIMITED=1
TERMINAL_MEMORY_BUFFER_MAX=10485760
# Optional cap for persisted raw (ignored if unlimited=1)
# TERMINAL_HISTORY_MAX_RAW=5242880

# Shared session (all browsers join same session id when enabled)
# NEXT_PUBLIC_FORCE_SHARED_SESSION=1
# NEXT_PUBLIC_SHARED_SESSION_ID=main-session

# Disable localStorage terminal cache (always fetch from server history)
# NEXT_PUBLIC_DISABLE_LOCAL_CACHE=1

# Explicit socket base URL override (fallback ke origin kalau tidak diset)
# NEXT_PUBLIC_SOCKET_URL=https://domainkamu.com
